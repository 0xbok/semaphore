        "typescript": "^4.5.5"
    },
    "config": {
        "paths": {
            "contracts": "./contracts",
            "circuit": "./circuit",
            "tests": "./test",
            "cache": "./cache",
            "deploy": "./deploy",
            "deployments": "./deployments",
            "build": {
                "snark": "./build/snark",
                "contracts": "./build/contracts"
            }
        }
    }
